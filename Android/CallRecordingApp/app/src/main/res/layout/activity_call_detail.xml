<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hackeru.callrecordingapp.CallDetailActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@android:drawable/ic_media_play"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_call_detail_play_button"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_call_detail_play_button"
        android:id="@+id/activity_call_detail_seekbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_below="@id/activity_call_detail_seekbar"
        android:id="@+id/activity_call_detail_current_duration_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:45"
        android:id="@+id/activity_call_detail_total_duration_text_view"
        android:layout_below="@id/activity_call_detail_seekbar"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
